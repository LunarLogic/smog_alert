<h1>Użytkownicy:</h1>

<p><%= link_to 'Dodaj użytkownika', new_admin_user_path, class: 'btn btn-success', id: 'new-user' %></p>

<table class='table' id='users'>
  <thead class='thead-dark'>
    <tr>
      <th>Id</th>
      <th>Adres email</th>
      <th>Admin</th>
      <th>Działania</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class='user-row'>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? 'tak' : 'nie' %></td>
        <td>
          <%= link_to 'Pokaż', admin_user_path(user), class: "btn btn-default btn-sm"%>
          <%= link_to 'Edytuj', edit_admin_user_path(user), class: "btn btn-default btn-sm"%>
          <%= link_to 'Usuń', admin_user_path(user), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Czy na pewno chcesz usunąć użytkownika #{user.email}?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
