<!DOCTYPE html>
<html>
  <head>
    <title>SmogAlert</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application-admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application-admin' %>
  </head>

  <body>
    <% if signed_in? %>
      <%= render 'layouts/admin_navbar'%>
    <% end %>
    <div class = "container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
