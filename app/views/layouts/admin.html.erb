<!DOCTYPE html>
<html>
  <head>
    <title>SmogAlert</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application-admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application-admin' %>
  </head>

  <body>
    <%= render 'layouts/admin_navbar'%>
    <div class = "container">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>

      <% if flash[:success] %>
        <p class="success"><%= flash[:success] %></p>
      <% end %>

      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
